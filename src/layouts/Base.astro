---
interface Props {
  title?: string;
}

const { title = 'Terminal' } = Astro.props;
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | k-park</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500;600&display=swap" rel="stylesheet"></link>
  </head>
  <body>
    <div class="container">
      <header>
        <div class="logo">k-park@terminal</div>
        <nav>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/downloads">Downloads</a></li>
          </ul>
        </nav>
      </header>

      <main class="content">
        <slot />
      </main>

      <footer>
        <p><span class="prompt">$</span> <span class="command">echo "Built with Astro"</span></p>
        <p>&copy; 2025 k-park</p>
      </footer>
    </div>

    <style is:global>
      @import '../styles/global.css';
    </style>
  </body>
</html>
